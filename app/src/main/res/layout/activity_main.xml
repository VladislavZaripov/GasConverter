<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="Gasconverter.MainActivity"
            android:orientation="vertical"
            android:layout_margin="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textColor="#000000"/>
            <Button
                    android:id="@+id/button_star"
                    android:background="@drawable/star"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
                    android:id="@+id/CV_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">
                <LinearLayout
                        android:id="@+id/LL_search"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp">
                    <TextView
                            android:text="@string/Search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                        <TableLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                            <TableRow android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                                <TextView
                                        android:text="@string/Number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:labelFor="@+id/editText_filter_number"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <EditText
                                        android:id="@+id/editText_filter_number"
                                        android:layout_width="145dp"
                                        android:layout_height="25dp"
                                        android:inputType="text"
                                        android:gravity="center"
                                        android:ems="10"
                                        android:background="@drawable/number"
                                        android:textSize="20sp"
                                        android:layout_gravity="center"
                                        tools:ignore="Autofill,TextFields"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </TableRow>
                            <TableRow android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                                <TextView
                                        android:text="@string/Group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:textSize="16sp"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <Spinner
                                        android:id="@+id/spinner_group"
                                        android:layout_width="145dp"
                                        android:layout_height="25dp"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </TableRow>
                            <TableRow android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                                <TextView
                                        android:text="@string/Brand"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:textSize="16sp"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <Spinner
                                        android:id="@+id/spinner_brand"
                                        android:layout_width="145dp"
                                        android:layout_height="25dp"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"/>
                                <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </TableRow>
                        </TableLayout>
                        <Button
                                android:id="@+id/button_filter"
                                android:layout_width="53dp"
                                android:layout_height="34dp"
                                android:background="@drawable/search"
                                android:layout_gravity="center_vertical"
                                android:stateListAnimator="@null"
                                android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">
                    <TextView
                            android:text="@string/Label_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">
                        <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                        <Button
                                android:id="@+id/button_new"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:background="@drawable/newv"
                                android:stateListAnimator="@null"/>
                        <Button
                                android:id="@+id/button_edit"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:background="@drawable/editv"
                                android:stateListAnimator="@null"/>
                        <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_marginTop="5dp">
                            <TextView
                                    android:text="@string/Group"
                                    android:layout_width="80dp"
                                    android:layout_height="25dp"
                                    android:gravity="center_vertical"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:labelFor="@+id/editText_group"/>
                            <EditText
                                    android:id="@+id/editText_group"
                                    android:layout_width="145dp"
                                    android:layout_height="25dp"
                                    android:inputType="text"
                                    android:gravity="center"
                                    android:ems="3"
                                    android:textSize="16sp"
                                    android:background="@drawable/line"
                                    android:layout_marginStart="5dp"
                                    tools:ignore="Autofill"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_marginTop="5dp">
                            <TextView
                                    android:text="@string/Brand"
                                    android:layout_width="80dp"
                                    android:layout_height="25dp"
                                    android:gravity="center_vertical"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:labelFor="@+id/editText_brand"/>
                            <EditText
                                    android:id="@+id/editText_brand"
                                    android:layout_width="145dp"
                                    android:layout_height="25dp"
                                    android:inputType="text"
                                    android:gravity="center"
                                    android:ems="3"
                                    android:textSize="16sp"
                                    android:background="@drawable/line"
                                    android:layout_marginStart="5dp"
                                    tools:ignore="Autofill"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_marginTop="5dp">
                            <TextView
                                    android:text="@string/Number"
                                    android:layout_width="80dp"
                                    android:layout_height="25dp"
                                    android:gravity="center_vertical"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:labelFor="@+id/editText_number"/>
                            <EditText
                                    android:id="@+id/editText_number"
                                    android:layout_width="145dp"
                                    android:layout_height="25dp"
                                    android:inputType="text"
                                    android:gravity="center"
                                    android:ems="3"
                                    android:textSize="16sp"
                                    android:background="@drawable/line"
                                    android:layout_marginStart="5dp"
                                    tools:ignore="Autofill,TextFields"/>
                        </TableRow>
                    </TableLayout>
                    <LinearLayout
                            android:id="@+id/LL_TABLE_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/LL_button_panel"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center">
                        <Button
                                android:id="@+id/button_addRow"
                                android:background="@drawable/plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"/>
                        <Button
                                android:id="@+id/button_deleteRow"
                                android:background="@drawable/minus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="10dp"/>
                        <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"/>
                        <Button
                                android:id="@+id/button_delete"
                                android:background="@drawable/trash"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"/>
                        <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                        <Button
                                android:id="@+id/button_ok"
                                android:background="@drawable/ok"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                <TextView
                        android:text="@string/Label_V"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                    <RadioGroup
                            android:id="@+id/radioGroup_Volume"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        <RadioButton
                                android:id="@+id/radioButton_VolumeVehicle"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"/>
                        <RadioButton
                                android:id="@+id/radioButton_VolumeEdit"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"/>
                    </RadioGroup>
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/imageView_rg1_rb1_img"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="9dp"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/card"
                                    tools:ignore="ContentDescription"
                                    android:layout_gravity="center_vertical"/>
                            <TextView
                                    android:id="@+id/textView_rg1_rb1_description"
                                    android:text="@string/textView_rg1_rb1_description"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            <TextView
                                    android:id="@+id/textView_VolumeVehicle"
                                    android:layout_width="50dp"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:background="@drawable/line"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                            <ImageView
                                    android:id="@+id/imageView_rg1_rb2_img"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="29dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/edit"
                                    tools:ignore="ContentDescription"/>
                            <TextView
                                    android:id="@+id/textView_rg1_rb2_description"
                                    android:text="@string/textView_rg12_rb2_description"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:labelFor="@+id/editText_VolumeEdit"/>
                            <EditText
                                    android:id="@+id/editText_VolumeEdit"
                                    android:layout_width="50dp"
                                    android:layout_height="35dp"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical"
                                    android:paddingBottom="7dp"
                                    android:ems="3"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:maxLength="4"
                                    android:background="@drawable/line"
                                    tools:ignore="Autofill"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">
                <TextView
                        android:text="@string/Label_P"
                        android:labelFor="@+id/editText_Pressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                <EditText
                        android:id="@+id/editText_Pressure"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:ems="3"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:maxLength="3"
                        android:background="@drawable/line"
                        android:layout_gravity="center_vertical"
                        tools:ignore="Autofill"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                <TextView
                        android:text="@string/Label_T"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                    <RadioGroup
                            android:id="@+id/radioGroup_Temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        <RadioButton
                                android:id="@+id/radioButton_TemperatureGismeteo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"/>
                        <RadioButton
                                android:id="@+id/radioButton_TemperatureEdit"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"/>
                    </RadioGroup>
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                            <ImageView
                                    android:id="@+id/imageView_rg2_rb1_img"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="9dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/weather"
                                    tools:ignore="ContentDescription,TooManyViews"/>
                            <TextView
                                    android:id="@+id/textView_city"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            <TextView
                                    android:id="@+id/textView_TemperatureGismeteo"
                                    android:layout_width="50dp"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:background="@drawable/line"
                                    android:layout_gravity="center_vertical"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                            <ImageView
                                    android:id="@+id/imageView_rg2_rb2_img"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="29dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/edit"
                                    tools:ignore="ContentDescription"/>
                            <TextView
                                    android:id="@+id/textView_rg2_rb2_description"
                                    android:text="@string/textView_rg12_rb2_description"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:labelFor="@+id/editText_TemperatureEdit"/>
                            <EditText
                                    android:id="@+id/editText_TemperatureEdit"
                                    android:layout_width="50dp"
                                    android:layout_height="35dp"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:gravity="center"
                                    android:paddingBottom="7dp"
                                    android:ems="3"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:maxLength="3"
                                    android:background="@drawable/line"
                                    tools:ignore="Autofill,TooManyViews"
                                    android:layout_gravity="center_vertical"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/textView_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
            <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/icon"
                    tools:ignore="ContentDescription"/>
            <TextView
                    android:id="@+id/textView_volumeCNG"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:background="@drawable/lineempty"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_gravity="center"/>
            <Button
                    android:id="@+id/button_calculate"
                    android:layout_width="119dp"
                    android:layout_height="37dp"
                    android:background="@drawable/calculate"
                    android:layout_marginStart="10dp"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    </LinearLayout>
</ScrollView>